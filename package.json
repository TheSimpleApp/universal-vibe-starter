  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "tsx scripts/setup.ts",
    "setup:auto": "bash setup.sh",
    "postinstall": "npm list next react react-dom --depth=0 || true",
    "db:push": "drizzle-kit push",
    "db:push:sqlite": "drizzle-kit push --config=drizzle.config.sqlite.ts",
